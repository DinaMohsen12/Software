@model  MVClogin.Models.Login
@{
    ViewBag.Title = "login";
}

@using (Html.BeginForm("login", "Home", FormMethod.Post))
{
    <fieldset style="width:300px">
        <legend>Login</legend>
        <table>
            <tr>
<td>@Html.Label("Enter username")</td>
                <td>@Html.ValidationMessageFor(a=>a.username)</td>
            </tr>
            <tr>
<td> @Html.TextBoxFor(a=>a.username) </td>
            </tr>
            <tr>
                <td>@Html.Label("Enter password")</td>
            </tr>
            <tr>
                <td> @Html.PasswordFor(a => a.password) </td>
                <td>@Html.ValidationMessageFor(a => a.password)</td>
            </tr>
            <tr>
<td><input type="submit" id="submitbtn" value="login" onclick="mine"/> </td>
                
            </tr>
        </table>
        </fieldset>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
}

